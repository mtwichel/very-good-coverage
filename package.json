{
  "name": "very-good-coverage",
  "version": "1.1.0",
  "description": "A Github Action which helps enforce code coverage threshold using lcov",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "prepare": "ncc build index.js -o dist --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run lint && npm run prepare && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VGVentures/very-good-coverage.git"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "Coverage",
    "JavaScript",
    "lcov",
    "testing"
  ],
  "author": "hi@verygood.ventures",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/VGVentures/very-good-coverage/issues"
  },
  "homepage": "https://github.com/VGVentures/very-good-coverage",
  "dependencies": {
    "@actions/core": "^1.2.5",
    "lcov-parse": "^1.0.0",
    "minimatch": "^3.0.4",
    "handlebars": "^4.7.6"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.24.1",
    "eslint": "^7.12.1",
    "jest": "^26.6.1"
  }
}
